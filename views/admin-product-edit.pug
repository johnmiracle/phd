extends ./layout/admin/base
include ./mixins/_flash-messages

block content
    .span9
    .container
      .admin-top
        .row
          .col-md-3
          .col-md-6
            h3#category-subheading.header Add New Product Category
            +flashMessages()
            form#addCategoryForm.well.well-sm(method='post' action='/admin/product/edit/'+product._id)
              .form-group
                label(for='name') Name
                input#product-name.form-control(type='text', name='name', required='' value=product.name)
                //- .form-group
                //-     label.capitalize Category
                //-     select.form-control(name='category', required='')
                   
              .form-group
                label(for='Description') Description
                textarea#description.form-control(type='text', name='description', required='', rows='5')=product.description
              .form-group
                label(for='Price') Price
                input#price.form-control(type='text', name='price', required='', value=product.price)              
              .form-group
                label(for='Price') In Stock
                select.form-control(name='inStock', required='' )
                  option(selected='')=product.inStock
                  option(value='yes') Yes
                  option(value='no') No
              br
              br
              button.btn.btn-success(type='submit', value='Submit') Update product
              br 
              br
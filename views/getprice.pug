extends ./layout/mainlayout
include ./mixins/_flash-messages

block content
    section#quote
      .quote-h2(id='')
        h2 Get Quote for your Prefered Product &amp; Print
      .quote-cont
        form#info_form(action='', method='POST')
          .container
            h4 Your order Info
            .border-line
          .container
            .row.context
              // <div class="col-md-12" id="error"> </div>
              .col-md-6
                h4
                  | What do you want to Print?
                p Please specify products you are interested in, along with their quantities.
              .col-md-6
                .input_detail
                  textarea#print_detail(type='text', placeholder='500 business cards, 200 Letterheads and 100 Notepads', required='')
                  p#print_detail_error
              .col-md-6.won
                h4
                  | Do you already have a ready made design?
              .col-md-6.won(required='')
                input#design_detail.field_text(type='text', style='height:40px', required='', placeholder='Yes i do or No i dont')
                p#checkbox_error
              .col-md-6
                h4
                  | Where would you want your order delivered?
                p This helps us know what it would cost to ship your order to you.
              .col-md-6.input_detail
                textarea#deliver_detail(type='text', placeholder='61, Shipeolu street,by FCMB, Onipanu,Somolu, Lagos.', required='')
                p#deliver_error
          .border_line
          .container
            h4
              | Contact Info
            .border-line
            h4
              | we will get back to you using the following details.
            .info-container
              .row
                .col-md-6.align
                  h4
                    | Your Name
                .col-md-6.align
                  input#name.field_text(type='text', style='height:40px', required='')
                  p#name_error
                .col-md-6.align
                  h4
                    | Your email address
                .col-md-6.align
                  input#Email_field.field_text(type='email', style='height:40px', placeholder='@gmail.com', required='')
                  p#email_error
                .col-md-6.align
                  h4
                    | Your Mobile Number
                .col-md-6.align
                  input#phoneNum_field.field_text(type='text', style='height:40px', placeholder='+2348131179082', maxlength='20', required='')
                  p#phone_number_error
          .submit
            button.btn.btn-submit(type='submit') Submit 
